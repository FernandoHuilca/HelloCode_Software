<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" style="-fx-background-color: #424874;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Modulo_Usuario.Controladores.HomeController">
    
    <!-- Navbar superior -->
    <HBox prefHeight="60" style="-fx-background-color: #A6B1E1; -fx-effect: dropshadow(gaussian, #23243a, 4, 0.2, 0, 2);" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="12" left="20" right="20" top="12" />
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="12" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 24px;" text="🏠" />
            <VBox spacing="2">
                <Label style="-fx-text-fill: #424874; -fx-font-size: 16px; -fx-font-weight: bold;" text="Hello Code Software" />
                <Label style="-fx-text-fill: #A6B1E1; -fx-font-size: 11px;" text="Panel Principal" />

            </VBox>
        </HBox>
        <Button onAction="#mostrarPerfil" prefHeight="40" prefWidth="40" style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-text-fill: #424874; -fx-background-radius: 20;" text="👤" />
    </HBox>

    <!-- Contenido principal -->
    <VBox alignment="CENTER" spacing="24" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="60">
        <padding>
            <Insets bottom="16" left="16" right="16" top="32" />

        </padding>

        <!-- Mensaje de bienvenida -->
        <VBox alignment="CENTER" spacing="8">
            <Label style="-fx-text-fill: #DCD6F7; -fx-font-size: 28px; -fx-font-weight: bold;" text="¡Bienvenido!" />
            <Label style="-fx-text-fill: #A6B1E1; -fx-font-size: 14px;" text="Selecciona el módulo que deseas utilizar" />
        </VBox>

        <!-- Scroll de módulos -->
        <ScrollPane fitToHeight="false" fitToWidth="true" maxHeight="420" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox alignment="CENTER" maxWidth="300" spacing="18" style="-fx-padding: 10 0 10 0;">

                <!-- Módulo Usuarios -->
                <HBox alignment="CENTER_LEFT" maxWidth="Infinity" onMouseClicked="#abrirUsuarios" prefHeight="80" spacing="16" style="-fx-background-color: #DCD6F7; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, #424874, 6, 0.2, 0, 2);">
                    <padding>
                        <Insets bottom="16" left="20" right="20" top="16" />
                    </padding>
                    <Label style="-fx-font-size: 32px; -fx-text-fill: #424874;" text="👥" />
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #424874; -fx-font-size: 16px; -fx-font-weight: bold;" text="Módulo Usuarios" />
                        <Label style="-fx-text-fill: #6B7A99; -fx-font-size: 12px;" text="Administrar usuarios del sistema" />
                    </VBox>
                    <Label style="-fx-text-fill: #424874; -fx-font-size: 20px; -fx-font-weight: bold;" text="→" />
                </HBox>

                <!-- Módulo Ejercicios -->
                <HBox alignment="CENTER_LEFT" maxWidth="Infinity" onMouseClicked="#abrirEjercicios" prefHeight="80" spacing="16" style="-fx-background-color: #DCD6F7; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, #424874, 6, 0.2, 0, 2);">
                    <padding>
                        <Insets bottom="16" left="20" right="20" top="16" />
                    </padding>
                    <Label style="-fx-font-size: 32px; -fx-text-fill: #424874;" text="💻" />
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #424874; -fx-font-size: 16px; -fx-font-weight: bold;" text="Módulo Ejercicios" />
                        <Label style="-fx-text-fill: #6B7A99; -fx-font-size: 12px;" text="Crear y gestionar ejercicios" />
                    </VBox>
                    <Label style="-fx-text-fill: #424874; -fx-font-size: 20px; -fx-font-weight: bold;" text="→" />
                </HBox>

                <!-- Módulo Gamificación -->
                <HBox alignment="CENTER_LEFT" maxWidth="Infinity" onMouseClicked="#abrirReportes" prefHeight="80" spacing="16" style="-fx-background-color: #DCD6F7; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, #424874, 6, 0.2, 0, 2);">
                    <padding>
                        <Insets bottom="16" left="20" right="20" top="16" />
                    </padding>
                    <Label style="-fx-font-size: 32px;" text="🏆" />
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #424874; -fx-font-size: 16px; -fx-font-weight: bold;" text="Módulo Gamificación" />
                        <Label style="-fx-text-fill: #424874; -fx-font-size: 12px;" text="Ranking, logros y desafíos" />
                    </VBox>
                    <Label style="-fx-text-fill: #424874; -fx-font-size: 20px; -fx-font-weight: bold;" text="→" />
                </HBox>

                <!-- Módulo Gamificación -->
                <HBox alignment="CENTER_LEFT" maxWidth="Infinity" onMouseClicked="#abrirComunidad" prefHeight="80" spacing="16" style="-fx-background-color: #DCD6F7; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, #424874, 6, 0.2, 0, 2);">
                    <padding>
                        <Insets bottom="16" left="20" right="20" top="16" />
                    </padding>
                    <Label style="-fx-font-size: 32px; -fx-text-fill: #424874;" text="🏆" />
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: #424874; -fx-font-size: 16px; -fx-font-weight: bold;" text="Módulo Comunidad" />
                        <Label style="-fx-text-fill: #6B7A99; -fx-font-size: 12px;" text="Participa y colabora con otros usuarios" />
                    </VBox>
                    <Label style="-fx-text-fill: #424874; -fx-font-size: 20px; -fx-font-weight: bold;" text="→" />
                </HBox>
            </VBox>
        </ScrollPane>

        <!-- Botón de cerrar sesión -->
        <Button onAction="#cerrarSesion" prefHeight="36" prefWidth="150" style="-fx-background-color: transparent; -fx-text-fill: #D6E5E3; -fx-font-weight: bold; -fx-border-color: #D6E5E3; -fx-border-radius: 8; -fx-border-width: 1;" text="Cerrar Sesión" />
    </VBox>
</AnchorPane>
