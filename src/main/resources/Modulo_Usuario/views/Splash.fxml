<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Modulo_Usuario.Controladores.SplashController"
            prefWidth="360.0" prefHeight="720.0"
            stylesheets="@styles.css">
    <StackPane fx:id="rootPane" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               xmlns="http://javafx.com/javafx"
               xmlns:fx="http://javafx.com/fxml"
               >
        <!-- Fondo colorido que ocupa todo (color sólido para compatibilidad) -->
        <Region style="-fx-background-color: #424874;"
                StackPane.alignment="CENTER"
                maxWidth="Infinity" maxHeight="Infinity"/>

        <!-- Contenido centrado -->
        <VBox alignment="CENTER"
              spacing="10"
              StackPane.alignment="CENTER"
        >
            <padding>
                <Insets top="60" right="40" bottom="60" left="40"/>
            </padding>

            <!-- Logo principal con texto HC -->
            <StackPane fx:id="logoContainer" 
                       style="-fx-background-color: linear-gradient(135deg, #A6B1E1, #DCD6F7, #CACFD6); -fx-background-radius: 120; -fx-effect: dropshadow(gaussian, #A6B1E1, 30, 0.3, 0, 0); -fx-border-color: #fff; -fx-border-width: 4; -fx-border-radius: 120;"
                       prefWidth="180" prefHeight="180">
                <Label text="HC" style="-fx-font-size: 72px; -fx-font-weight: bold; -fx-text-fill: #424874; -fx-font-family: 'Arial Black';"/>
            </StackPane>

            <!-- Título -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 30 0 0 0;">
                <Label text="Hello Code Software" 
                       style="-fx-text-fill: #DCD6F7; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                
                <Label text="Versión 2.0" 
                       style="-fx-text-fill: #A6B1E1; -fx-font-size: 15px; -fx-font-style: italic;"/>
            </VBox>

            <!-- Barra de progreso simple -->
            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30 0 0 0;">
                <ProgressBar fx:id="progressBar" 
                             prefWidth="220" 
                             prefHeight="10"
                             style="-fx-accent: linear-gradient(to right, #A6B1E1, #DCD6F7, #CACFD6); -fx-background-radius: 5;"/>
                
                <Label fx:id="statusLabel" 
                       text="Inicializando..." 
                       style="-fx-text-fill: #D6E5E3; -fx-font-size: 13px; -fx-font-weight: bold;"/>
            </VBox>

            <!-- Footer simple -->
            <VBox alignment="CENTER" style="-fx-padding: 30 0 0 0;">
                <Label text="© 2024 Hello Code Software" 
                       style="-fx-text-fill: #D6E5E3; -fx-font-size: 11px;"/>
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>