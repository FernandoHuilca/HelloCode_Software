<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="720" prefWidth="360" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #0b0c3c, #16a1d6);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestorEjercicios.Controllers.LeccionCompletadaController">

    <!-- Título -->
    <Label alignment="TOP_CENTER" layoutX="20" layoutY="40" prefHeight="235.0" prefWidth="320" style="-fx-text-fill: white; -fx-font-size: 42px; -fx-font-weight: bold;" text="¡Completaste&#10;la lección!" textAlignment="CENTER" wrapText="true">
      <font>
         <Font name="Inter Italic" size="12.0" />
      </font></Label>

    <!-- Contenedor de estadísticas -->
    <HBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" prefWidth="100" spacing="5" style="-fx-background-color: #0b0c3c; -fx-padding: 10; -fx-background-radius: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="EXP TOTAL" />
            <Label fx:id="lblExpTotal" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="⚡ 100" />
        </VBox>

        <VBox alignment="CENTER" prefWidth="100" spacing="5" style="-fx-background-color: #0b0c3c; -fx-padding: 10; -fx-background-radius: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="ACIERTOS" />
            <Label fx:id="lblAciertos" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="100%" />
        </VBox>
    </HBox>

    <!-- Botón -->
    <Button fx:id="btnContinuar" prefHeight="83.0" prefWidth="280" style="-fx-background-color: white; -fx-text-fill: #0b0c3c; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" text="VOLVER A HOME" textAlignment="CENTER" wrapText="true" />
</VBox>
