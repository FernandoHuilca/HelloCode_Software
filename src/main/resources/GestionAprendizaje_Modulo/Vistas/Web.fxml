<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.ProgressBar?>

<AnchorPane prefHeight="640.0" prefWidth="360.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GestionAprendizaje_Modulo.Controladores.WebController"
            style="-fx-background-color: #1C1B22;">

    <!-- Barra superior compacta -->
    <HBox spacing="6.0" alignment="CENTER_LEFT"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
          style="-fx-background-color: rgba(28,27,34,0.95);
                 -fx-padding: 8 10;
                 -fx-border-color: rgba(255,255,255,0.08);
                 -fx-border-width: 0 0 1 0;">
        <children>
            <Button text="❮" onAction="#cerrarVentana"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18px; -fx-cursor: hand;" />
            <Button fx:id="backButton" text="⟵" onAction="#irAtras"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button fx:id="forwardButton" text="⟶" onAction="#irAdelante"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button fx:id="reloadButton" text="⟳" onAction="#recargar"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button fx:id="externalButton" text="↗" onAction="#abrirEnNavegadorExterno"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Separator prefWidth="6.0" />
            <Label fx:id="titleLabel" text="Cargando..."
                   style="-fx-text-fill: white; -fx-font-weight: bold; -fx-opacity: 0.9;"
                   maxWidth="200" />
        </children>
    </HBox>

    <!-- Barra de progreso delgada -->
    <ProgressBar fx:id="progressBar" progress="0.0"
                 AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0"
                 style="-fx-accent: #7C83FD; -fx-pref-height: 2;" />

    <!-- WebView ocupa todo el resto -->
    <WebView fx:id="webView"
             AnchorPane.topAnchor="42.0" AnchorPane.bottomAnchor="0.0"
             AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
</AnchorPane>
