<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="640.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionAprendizaje_Modulo.Controladores.StudentDashboardController">
    <top>
        <Label text="Panel del Estudiante" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Panel Izquierdo: Selección -->
                <VBox prefWidth="250.0" spacing="5.0">
                    <children>
                        <Label text="1. Elige un Curso" />
                        <ComboBox fx:id="comboCursos" onAction="#onCursoSeleccionado" prefWidth="250.0" promptText="Cursos disponibles..." />
                        <Label text="2. Elige tu Ruta de Aprendizaje" />
                        <ComboBox fx:id="comboRutas" onAction="#onRutaSeleccionada" prefWidth="250.0" promptText="Rutas del curso..." />
                  <Button fx:id="buttonAtrasE" mnemonicParsing="false" onAction="#regresarPrincipalE" text="Atrás" />
                    </children>
                </VBox>

                <!-- Panel Derecho: AHORA MUESTRA LA RUTA GRÁFICA -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="labelNombreRuta" text="Selecciona una ruta para ver el camino">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="464.0" prefWidth="166.0" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="pathContainerEstudiante" alignment="TOP_CENTER" spacing="15.0">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </center>
</BorderPane>
