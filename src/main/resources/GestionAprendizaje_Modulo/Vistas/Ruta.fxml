<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GestionAprendizaje_Modulo.Controladores.RutaController"
            fx:id="rootPane" prefWidth="360.0" prefHeight="640.0"
            style="-fx-background-color: #424874;">

    <!-- Top Bar -->
    <HBox style="-fx-background-color: linear-gradient(to right, #DCD6F7, #A6B1E1); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 6, 0.3, 0, 3);"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" prefHeight="65" alignment="CENTER">
        <padding>
            <Insets top="12" right="25" bottom="12" left="25"/>
        </padding>
        <Button fx:id="btnAtras" text="⬅" onAction="#manejarAtras" style="-fx-background-color: transparent; -fx-text-fill: #424874; -fx-font-size: 18px; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="tituloLenguajeLabel" text="Java" style="-fx-text-fill: #424874; -fx-font-size: 22px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif;"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Botón Recursos -->
    <Button text="Recursos" onAction="#abrirRecursos"
            style="-fx-background-color: #A6B1E1; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8; -fx-cursor: hand;"
            AnchorPane.topAnchor="75" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" prefHeight="40"/>

    <!-- Contenido principal -->
    <Pane fx:id="nodoContainer" style="-fx-padding: 25;" AnchorPane.topAnchor="125" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <!-- Los nodos y líneas se agregarán dinámicamente desde el controlador -->
    </Pane>

    <!-- Subtema -->
    <Label text="Bucles" style="-fx-text-fill: #DCD6F7; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;"
           AnchorPane.topAnchor="105" AnchorPane.leftAnchor="10"/>

</AnchorPane>