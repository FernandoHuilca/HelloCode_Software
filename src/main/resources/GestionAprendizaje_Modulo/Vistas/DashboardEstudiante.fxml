<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="GestionAprendizaje_Modulo.Controladores.DashboardEstudianteController" fx:id="rootPane" prefWidth="360.0" prefHeight="640.0" style="-fx-background-color: #424874;">

    <!-- Top Bar -->
    <HBox style="-fx-background-color: linear-gradient(to right, #DCD6F7, #A6B1E1); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 6, 0.3, 0, 3);" 
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" prefHeight="65" alignment="CENTER">
        <padding>
            <Insets top="12" right="25" bottom="12" left="25"/>
        </padding>
        <Label text="💻" style="-fx-font-size: 26px;" HBox.hgrow="NEVER"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Encuesta Inicial" style="-fx-text-fill: #424874; -fx-font-size: 22px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif;"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Contenido principal -->
    <VBox spacing="25" alignment="TOP_CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="75" AnchorPane.bottomAnchor="80">
        <Label text="Selecciona el lenguaje que deseas aprender:" style="-fx-text-fill: #DCD6F7; -fx-font-size: 16px;"/>
        <ComboBox fx:id="lenguajeComboBox"/>
        <Label text="Selecciona tu nivel de conocimiento:" style="-fx-text-fill: #DCD6F7; -fx-font-size: 16px;"/>
        <ComboBox fx:id="nivelComboBox"/>
        <Button fx:id="continuarButton" text="Continuar" onAction="#manejarContinuar" style="-fx-background-color: #A6B1E1; -fx-text-fill: #424874; -fx-font-weight: bold; -fx-background-radius: 25; -fx-font-size: 16px;"/>
    </VBox>

    <!-- Bottom Navigation Bar -->
    <HBox style="-fx-background-color: #A6B1E1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.3, 0, -2);" 
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" prefHeight="80" alignment="CENTER" spacing="15">
        <padding>
            <Insets top="12" right="15" bottom="12" left="15"/>
        </padding>
        <Button text="🏠 Inicio" style="-fx-background-color: white; -fx-text-fill: #50C878; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 18;"/>
        <Button text="👤 Perfil" style="-fx-background-color: white; -fx-text-fill: #3498DB; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 18;"/>
        <Button text="🏆 Ranking" style="-fx-background-color: white; -fx-text-fill: #F1C40F; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 18;"/>
        <Button text="👥 Comunidad" style="-fx-background-color: white; -fx-text-fill: #9B59B6; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 18;"/>
    </HBox>

</AnchorPane>