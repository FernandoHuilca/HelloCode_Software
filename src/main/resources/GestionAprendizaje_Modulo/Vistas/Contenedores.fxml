<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<AnchorPane fx:id="rootPane" prefHeight="640.0" prefWidth="360.0" style="-fx-background-color: #424874;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionAprendizaje_Modulo.Controladores.RutaController">

    <!-- Lección título -->
    <Label fx:id="tituloLenguajeLabel" layoutX="20.0" layoutY="20.0" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Título de la Ruta" />

    <!-- Contenedor de nodos de la ruta (El contenedor de los botones estáticos) -->
    <Pane fx:id="nodoContainer" layoutX="20.0" layoutY="68.0" prefHeight="492.0" prefWidth="320.0" style="-fx-background-color: #2d3250; -fx-background-radius: 10;" />

    <!-- Barra inferior con íconos -->
    <HBox alignment="CENTER" layoutY="580.0" prefWidth="360.0" spacing="20" style="-fx-padding: 10;">
        <Button fx:id="btnHome" style="-fx-background-color: transparent; -fx-text-fill: white;" text="🏠" />
        <Button fx:id="btnAdd" style="-fx-background-color: transparent; -fx-text-fill: white;" text="➕" />
        <Button fx:id="btnLibrary" style="-fx-background-color: transparent; -fx-text-fill: white;" text="📚" />
    </HBox>
   <Button fx:id="btnRecursos" layoutX="296.0" layoutY="21.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="💡" />

</AnchorPane>
