<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" style="-fx-background-color: #374147;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionAprendizaje_Modulo.Controladores.DiagnosticoController">

    <!-- Toggle groups definidos en el controlador -->
    <children>
        <!-- Título -->
        <Label fx:id="tituloLabel" layoutX="20.0" layoutY="20.0" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Diagnóstico de Nivel" />

        <!-- Contenedor de todas las preguntas -->
        <VBox layoutX="20.0" layoutY="60.0" prefWidth="320.0" spacing="20.0" style="-fx-padding: 10px;">

            <!-- Nivel -->
            <VBox spacing="5.0">
                <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Seleccione su nivel de conocimiento:" />
                <RadioButton fx:id="rbNivelBasico" style="-fx-text-fill: white; -fx-font-size: 13px;" text="Básico" />
                <RadioButton fx:id="rbNivelIntermedio" style="-fx-text-fill: white; -fx-font-size: 13px;" text="Intermedio" />
                <RadioButton fx:id="rbNivelAvanzado" style="-fx-text-fill: white; -fx-font-size: 13px;" text="Avanzado" />
            </VBox>

            <!-- Pregunta 1 -->
            <VBox spacing="5.0">
                <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="1. ¿Qué esperas aprender en este curso?" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="A. Fundamentos de programación" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="B. Crear aplicaciones básicas" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="C. Resolver problemas lógicos" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="D. No estoy seguro aún" />
            </VBox>

            <!-- Pregunta 2 -->
            <VBox spacing="5.0">
                <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="2. ¿Por qué tomas este curso?" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="A. Por obligación académica" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="B. Por interés personal" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="C. Para trabajar en programación" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="D. Otro" />
            </VBox>

            <!-- Pregunta 3 -->
            <VBox spacing="5.0">
                <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="3. ¿Con qué frecuencia puedes dedicar tiempo?" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="A. Todos los días" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="B. 3–4 veces/semana" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="C. 1–2 veces/semana" />
                <RadioButton style="-fx-text-fill: white; -fx-font-size: 13px;" text="D. Sólo cuando tenga tiempo" />
            </VBox>

        </VBox>

        <!-- Botón Continuar -->
        <Button fx:id="btnContinuar" layoutX="130.0" layoutY="590.0" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #5A9BD5; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;                        -fx-background-radius: 18px; -fx-cursor: hand;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 4,0,0,3);" text="Continuar" />
    </children>
</AnchorPane>
