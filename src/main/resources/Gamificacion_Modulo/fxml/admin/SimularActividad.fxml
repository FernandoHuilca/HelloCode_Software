<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" 
            prefHeight="720.0" prefWidth="360.0" stylesheets="@../../styles/styles.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Gamificacion_Modulo.controllers_admin.SimularActividadController">
   <VBox fx:id="mainVBox" spacing="12">
      <padding>
         <Insets top="15" left="15" right="15" bottom="15"/>
      </padding>
   
   <!-- Header -->
   <VBox spacing="5" styleClass="header">
      <Label text="🎮 Simular Actividad" styleClass="title"/>
      <Label text="Simula la completación de actividades para usuarios" styleClass="subtitle"/>
   </VBox>
   
      <!-- Selección de Usuario -->
      <VBox spacing="6" styleClass="card">
         <padding>
            <Insets top="12" left="12" right="12" bottom="12"/>
         </padding>
         <Label text="👤 Seleccionar Usuario" styleClass="section-title"/>
         
         <VBox spacing="4">
            <Label text="Usuario:" styleClass="field-label"/>
            <ComboBox fx:id="cbUsuarios" promptText="Selecciona un usuario..." prefWidth="350"/>
         </VBox>
         
         <Label fx:id="lblInfoUsuario" text="Selecciona un usuario para ver información" 
                styleClass="info-text" wrapText="true"/>
      </VBox>
   
      <!-- Desafíos Activos -->
      <VBox spacing="6" styleClass="card">
         <padding>
            <Insets top="12" left="12" right="12" bottom="12"/>
         </padding>
         <Label text="🎯 Desafíos Activos del Usuario" styleClass="section-title"/>
         <Label text="Selecciona un desafío para simular actividades" styleClass="field-label"/>
         
         <ScrollPane prefHeight="180" fitToWidth="true" hbarPolicy="NEVER">
            <VBox fx:id="vboxDesafiosActivos" spacing="4">
               <!-- Contenido generado dinámicamente -->
            </VBox>
         </ScrollPane>
         
         <Label fx:id="lblDesafioSeleccionado" text="Selecciona un desafío de la lista" 
                styleClass="info-text"/>
      </VBox>
   
      <!-- Configuración de Actividades -->
      <VBox spacing="6" styleClass="card">
         <padding>
            <Insets top="12" left="12" right="12" bottom="12"/>
         </padding>
         <Label text="📊 Configuración de Actividades" styleClass="section-title"/>
         
         <VBox spacing="4">
            <Label text="Número de actividades a completar:" styleClass="field-label"/>
            <HBox spacing="8" alignment="CENTER_LEFT">
               <Spinner fx:id="spinnerActividades" prefWidth="80"/>
               <Label text="actividades" styleClass="help-text"/>
            </HBox>
            <Label text="Simula la completación de esta cantidad de actividades en el desafío seleccionado" 
                   styleClass="help-text" wrapText="true"/>
         </VBox>
      </VBox>
   
      <!-- Resultados (oculto inicialmente) -->
      <VBox fx:id="vboxResultados" spacing="6" styleClass="card preview-card" visible="false">
         <padding>
            <Insets top="12" left="12" right="12" bottom="12"/>
         </padding>
         <Label text="📈 Resultados de la Simulación" styleClass="section-title"/>
         <!-- Contenido generado dinámicamente -->
      </VBox>
   
      <!-- Botones de Acción -->
      <HBox spacing="10" alignment="CENTER">
         <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelarClicked" 
                 styleClass="secondary-button" prefWidth="120"/>
         <Button fx:id="btnSimular" text="Simular Actividades" onAction="#onSimularClicked" 
                 styleClass="primary-button" prefWidth="150" disable="true"/>
      </HBox>
   </VBox>
</ScrollPane> 