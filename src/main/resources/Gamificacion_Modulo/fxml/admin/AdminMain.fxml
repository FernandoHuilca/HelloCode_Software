<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="adminMainPane" prefHeight="720.0" prefWidth="360.0" stylesheets="@../../styles/styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gamificacion_Modulo.controllers_admin.AdminMainController">
   <top>
      <!-- Header -->
      <VBox styleClass="header" spacing="10">
         <padding>
            <Insets top="20" left="20" right="20" bottom="15"/>
         </padding>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <Button fx:id="btnVolver" text="← Volver" onAction="#onVolverClicked" styleClass="secondary-button"/>
            <Label text="Panel de Administración" styleClass="title"/>
         </HBox>
         <Label text="Crear y gestionar objetos del sistema" styleClass="subtitle"/>
      </VBox>
   </top>

   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
         <VBox spacing="15" alignment="TOP_CENTER">
            <padding>
               <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>
            
            <!-- Sección Desafíos -->
            <VBox spacing="10" styleClass="card">
               <padding>
                  <Insets top="15" left="15" right="15" bottom="15"/>
               </padding>
               <Label text="🎯 Gestión de Desafíos" styleClass="section-title"/>
               <Label text="Crear nuevos desafíos para usuarios" styleClass="section-subtitle"/>
               
               <HBox spacing="10" alignment="CENTER">
                  <Button fx:id="btnCrearDesafioSemanal" text="Crear Desafío Semanal" onAction="#onCrearDesafioSemanalClicked" 
                          styleClass="primary-button" prefWidth="160"/>
                  <Button fx:id="btnCrearDesafioMensual" text="Crear Desafío Mensual" onAction="#onCrearDesafioMensualClicked" 
                          styleClass="primary-button" prefWidth="160"/>
               </HBox>
            </VBox>
            
            <!-- Sección Logros -->
            <VBox spacing="10" styleClass="card">
               <padding>
                  <Insets top="15" left="15" right="15" bottom="15"/>
               </padding>
               <Label text="🏆 Gestión de Logros" styleClass="section-title"/>
               <Label text="Crear logros personalizados con criterios específicos" styleClass="section-subtitle"/>
               
               <Button fx:id="btnCrearLogro" text="Crear Logro Personalizado" onAction="#onCrearLogroClicked" 
                       styleClass="primary-button" prefWidth="300"/>
            </VBox>
            
                         <!-- Sección Asignación -->
             <VBox spacing="10" styleClass="card">
                <padding>
                   <Insets top="15" left="15" right="15" bottom="15"/>
                </padding>
                <Label text="📋 Asignación" styleClass="section-title"/>
                <Label text="Asignar desafíos específicos a usuarios" styleClass="section-subtitle"/>
                
                <Button fx:id="btnAsignarDesafio" text="Asignar Desafío a Usuario" onAction="#onAsignarDesafioClicked" 
                        styleClass="primary-button" prefWidth="300"/>
             </VBox>
             
             <!-- Sección Simulación -->
             <VBox spacing="10" styleClass="card">
                <padding>
                   <Insets top="15" left="15" right="15" bottom="15"/>
                </padding>
                <Label text="🎮 Simulación" styleClass="section-title"/>
                <Label text="Simular la completación de actividades en desafíos" styleClass="section-subtitle"/>
                
                <Button fx:id="btnSimularActividad" text="Simular Actividad" onAction="#onSimularActividadClicked" 
                        styleClass="primary-button" prefWidth="300"/>
             </VBox>
         </VBox>
      </ScrollPane>
   </center>

   <bottom>
      <!-- Footer con estadísticas -->
      <VBox styleClass="footer" spacing="10">
         <padding>
            <Insets top="15" left="20" right="20" bottom="20"/>
         </padding>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="lblEstadisticas" text="Cargando estadísticas..." styleClass="stats-text"/>
            <Button fx:id="btnActualizarStats" text="🔄" onAction="#onActualizarStatsClicked" 
                    styleClass="icon-button" prefWidth="30"/>
         </HBox>
      </VBox>
   </bottom>
</BorderPane> 