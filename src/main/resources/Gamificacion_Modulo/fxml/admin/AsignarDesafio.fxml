<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Gamificacion_Modulo.controllers_admin.AsignarDesafioController"
            prefWidth="360.0" prefHeight="640.0"
            style="-fx-background-color: #424874;">
    
    <!-- Navbar superior -->
    <HBox style="-fx-background-color: #A6B1E1; -fx-effect: dropshadow(gaussian, #23243a, 4, 0.2, 0, 2);" 
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" prefHeight="60">
        <padding>
            <Insets top="12" right="20" bottom="12" left="20"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="12" HBox.hgrow="ALWAYS">
            <Button text="←" onAction="#onCancelarClicked"
                    style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-text-fill: #424874; -fx-background-radius: 20;"
                    prefWidth="40" prefHeight="40"/>
            <VBox spacing="2">
                <Label text="Asignar Desafío" style="-fx-text-fill: #424874; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label text="Asigna desafíos a usuarios específicos" style="-fx-text-fill: #6B7A99; -fx-font-size: 11px;"/>
            </VBox>
        </HBox>
    </HBox>

    <!-- Contenido principal con ScrollPane -->
    <ScrollPane fitToWidth="true" 
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" 
                AnchorPane.topAnchor="60" AnchorPane.bottomAnchor="0"
                style="-fx-background: transparent; -fx-background-color: transparent;">
        
        <VBox fx:id="mainVBox" spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="16" bottom="20" left="16"/>
            </padding>

            <!-- Título de sección -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="📋 Asignar Desafío a Usuario" 
                       style="-fx-text-fill: #DCD6F7; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="Selecciona usuario y desafío para asignar" 
                       style="-fx-text-fill: #A6B1E1; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Selección de Usuario -->
            <VBox spacing="15" maxWidth="320" 
                  style="-fx-background-color: #DCD6F7; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.3, 0, 2);">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="👤 Seleccionar Usuario" 
                       style="-fx-text-fill: #424874; -fx-font-size: 18px; -fx-font-weight: bold;"/>
         
                <VBox spacing="8">
                    <Label text="Usuario:" 
                           style="-fx-text-fill: #424874; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <ComboBox fx:id="cbUsuarios" promptText="Selecciona un usuario..." prefWidth="280"
                             style="-fx-background-color: white; -fx-text-fill: #424874; -fx-background-radius: 8; -fx-padding: 8;"/>
                </VBox>
         
                <Label fx:id="lblInfoUsuario" text="Selecciona un usuario para ver información" 
                       style="-fx-text-fill: #6B7A99; -fx-font-size: 12px;" wrapText="true"/>
            </VBox>
   
            <!-- Desafíos Disponibles -->
            <VBox spacing="15" maxWidth="320" 
                  style="-fx-background-color: #DCD6F7; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.3, 0, 2);">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="🎯 Desafíos Disponibles" 
                       style="-fx-text-fill: #424874; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Selecciona un desafío para asignar" 
                       style="-fx-text-fill: #6B7A99; -fx-font-size: 12px;"/>
         
                <ScrollPane prefHeight="200" fitToWidth="true" hbarPolicy="NEVER"
                           style="-fx-background-color: #A6B1E1; -fx-background-radius: 8;">
                    <VBox fx:id="vboxDesafiosDisponibles" spacing="4">
                        <padding>
                            <Insets top="8" right="8" bottom="8" left="8"/>
                        </padding>
                        <!-- Contenido generado dinámicamente -->
                    </VBox>
                </ScrollPane>
         
                <Label fx:id="lblDesafioSeleccionado" text="Selecciona un desafío de la lista" 
                       style="-fx-text-fill: #6B7A99; -fx-font-size: 12px;"/>
            </VBox>
   
            <!-- Desafíos Activos del Usuario -->
            <VBox spacing="15" maxWidth="320" 
                  style="-fx-background-color: rgba(166, 177, 225, 0.3); -fx-background-radius: 12;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="📊 Desafíos Activos del Usuario" 
                       style="-fx-text-fill: #DCD6F7; -fx-font-size: 18px; -fx-font-weight: bold;"/>
         
                <ScrollPane prefHeight="120" fitToWidth="true" hbarPolicy="NEVER"
                           style="-fx-background-color: #DCD6F7; -fx-background-radius: 8;">
                    <VBox fx:id="vboxDesafiosActivos" spacing="4">
                        <padding>
                            <Insets top="8" right="8" bottom="8" left="8"/>
                        </padding>
                        <!-- Contenido generado dinámicamente -->
                    </VBox>
                </ScrollPane>
            </VBox>
   
            <!-- Botones de Acción -->
            <HBox spacing="12" alignment="CENTER">
                <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelarClicked" 
                        style="-fx-background-color: transparent; -fx-text-fill: #DCD6F7; -fx-font-weight: bold; -fx-border-color: #DCD6F7; -fx-border-radius: 8; -fx-border-width: 1; -fx-padding: 12 24;"
                        prefWidth="120"/>
                <Button fx:id="btnAsignar" text="Asignar Desafío" onAction="#onAsignarClicked" 
                        style="-fx-background-color: #A6B1E1; -fx-text-fill: #424874; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24;"
                        prefWidth="120" disable="true"/>
            </HBox>
        </VBox>
    </ScrollPane>
</AnchorPane> 