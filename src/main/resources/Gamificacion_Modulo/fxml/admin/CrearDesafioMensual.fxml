<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Gamificacion_Modulo.controllers_admin.CrearDesafioMensualController"
            prefWidth="360.0" prefHeight="640.0"
            style="-fx-background-color: #424874;">
    
    <!-- Navbar superior -->
    <HBox style="-fx-background-color: #A6B1E1; -fx-effect: dropshadow(gaussian, #23243a, 4, 0.2, 0, 2);" 
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" prefHeight="60">
        <padding>
            <Insets top="12" right="20" bottom="12" left="20"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="12" HBox.hgrow="ALWAYS">
            <Button text="←" onAction="#onCancelarClicked"
                    style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-text-fill: #424874; -fx-background-radius: 20;"
                    prefWidth="40" prefHeight="40"/>
            <VBox spacing="2">
                <Label text="Crear Desafío Mensual" style="-fx-text-fill: #424874; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label text="Define un nuevo desafío mensual" style="-fx-text-fill: #6B7A99; -fx-font-size: 11px;"/>
            </VBox>
        </HBox>
    </HBox>

    <!-- Contenido principal con ScrollPane -->
    <ScrollPane fitToWidth="true" 
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" 
                AnchorPane.topAnchor="60" AnchorPane.bottomAnchor="0"
                style="-fx-background: transparent; -fx-background-color: transparent;">
        
        <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="16" bottom="20" left="16"/>
            </padding>

            <!-- Título de sección -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="📅 Nuevo Desafío Mensual" 
                       style="-fx-text-fill: #DCD6F7; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="Configura los objetivos y logros del mes" 
                       style="-fx-text-fill: #A6B1E1; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Objetivo Mensual -->
            <VBox spacing="15" maxWidth="320" 
                  style="-fx-background-color: #DCD6F7; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.3, 0, 2);">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="🎯 Objetivo Mensual" 
                       style="-fx-text-fill: #424874; -fx-font-size: 18px; -fx-font-weight: bold;"/>
         
                <VBox spacing="8">
                    <Label text="Número de actividades por mes:" 
                           style="-fx-text-fill: #424874; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <Slider fx:id="sliderObjetivo" min="10" max="100" value="20" prefWidth="200" 
                                showTickLabels="true" showTickMarks="true"
                                style="-fx-background-color: #A6B1E1;"/>
                        <Label fx:id="lblObjetivo" text="20" 
                               style="-fx-text-fill: #424874; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    </HBox>
                    <Label text="Los usuarios deberán completar esta cantidad de actividades cada mes" 
                           style="-fx-text-fill: #6B7A99; -fx-font-size: 12px;" wrapText="true"/>
                </VBox>
            </VBox>
            <!-- Recompensa de Puntos -->
            <VBox spacing="15" maxWidth="320" 
                  style="-fx-background-color: #DCD6F7; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.3, 0, 2);">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label text="💎 Puntos de Recompensa" style="-fx-text-fill: #424874; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <VBox spacing="8">
                    <Label text="Puntos otorgados al completar el desafío:" style="-fx-text-fill: #424874; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <Slider fx:id="sliderPuntos" min="100" max="2000" value="300" prefWidth="200" showTickLabels="true" showTickMarks="true" style="-fx-background-color: #A6B1E1;"/>
                        <Label fx:id="lblPuntos" text="300" style="-fx-text-fill: #424874; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    </HBox>
                    <Label text="Estos puntos se sumarán a la experiencia del usuario al completar la meta mensual." wrapText="true" style="-fx-text-fill: #6B7A99; -fx-font-size: 12px;"/>
                </VBox>
            </VBox>
   
            <!-- Logros Asociados -->
            <VBox spacing="15" maxWidth="320" 
                  style="-fx-background-color: #DCD6F7; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.3, 0, 2);">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="🏆 Logros Asociados" 
                       style="-fx-text-fill: #424874; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="lblLogrosSeleccionados" text="0 logros seleccionados" 
                       style="-fx-text-fill: #424874; -fx-font-size: 14px; -fx-font-weight: bold;"/>
         
                <ScrollPane prefHeight="200" fitToWidth="true" hbarPolicy="NEVER"
                           style="-fx-background-color: #A6B1E1; -fx-background-radius: 8;">
                    <VBox fx:id="vboxLogros" spacing="4">
                        <padding>
                            <Insets top="8" right="8" bottom="8" left="8"/>
                        </padding>
                        <!-- Contenido generado dinámicamente -->
                    </VBox>
                </ScrollPane>
         
                <Label text="Selecciona los logros que los usuarios pueden obtener al completar este desafío" 
                       style="-fx-text-fill: #6B7A99; -fx-font-size: 12px;" wrapText="true"/>
            </VBox>
   
            <!-- Vista Previa -->
            <VBox spacing="15" maxWidth="320" 
                  style="-fx-background-color: rgba(166, 177, 225, 0.3); -fx-background-radius: 12;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="👀 Vista Previa" 
                       style="-fx-text-fill: #DCD6F7; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <VBox fx:id="vboxVistaPrevia" spacing="8"
                      style="-fx-background-color: #DCD6F7; -fx-background-radius: 8;">
                    <padding>
                        <Insets top="12" right="12" bottom="12" left="12"/>
                    </padding>
                    <!-- Contenido generado dinámicamente -->
                </VBox>
            </VBox>
   
            <!-- Botones de Acción -->
            <HBox spacing="12" alignment="CENTER">
                <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelarClicked" 
                        style="-fx-background-color: transparent; -fx-text-fill: #DCD6F7; -fx-font-weight: bold; -fx-border-color: #DCD6F7; -fx-border-radius: 8; -fx-border-width: 1; -fx-padding: 12 24;"
                        prefWidth="120"/>
                <Button fx:id="btnCrear" text="Crear Desafío" onAction="#onCrearClicked" 
                        style="-fx-background-color: #A6B1E1; -fx-text-fill: #424874; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24;"
                        prefWidth="120"/>
            </HBox>
        </VBox>
    </ScrollPane>
</AnchorPane> 