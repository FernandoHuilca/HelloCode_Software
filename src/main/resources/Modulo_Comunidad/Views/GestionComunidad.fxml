<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Comunidad_Modulo.Controladores_GUI.GestionComunidad_Controller">
   <children>
      <Text layoutX="58.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Gestión de Comunidad">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Text>

      <!-- Sección para crear comunidad -->
      <Label layoutX="84.0" layoutY="91.0" text="Crear Nueva Comunidad">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="70.0" layoutY="116.0" text="Nombre:" />
      <TextField fx:id="txtNombreComunidad" layoutX="67.0" layoutY="139.0" prefHeight="25.0" prefWidth="240.0" />
      <Label layoutX="70.0" layoutY="171.0" text="Descripción:" />
      <TextArea fx:id="txtDescripcionComunidad" layoutX="67.0" layoutY="188.0" prefHeight="25.0" prefWidth="240.0" />
      <Button fx:id="btnCrearComunidad" layoutX="105.0" layoutY="232.0" mnemonicParsing="false" onAction="#crearComunidad" prefHeight="30.0" prefWidth="150.0" text="Crear Comunidad" />

      <!-- Sección para asignar moderador -->
      <Label layoutX="103.0" layoutY="285.0" text="Asignar Moderador">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="61.0" layoutY="312.0" text="Nombre:" />
      <TextField fx:id="txtNombreModerador" layoutX="60.0" layoutY="329.0" prefHeight="25.0" prefWidth="240.0" />
      <Button fx:id="btnAsignarModerador" layoutX="100.0" layoutY="360.0" mnemonicParsing="false" onAction="#asignarModerador" prefHeight="30.0" prefWidth="150.0" text="Asignar Moderador" />

      <!-- Sección para ver información de la comunidad -->
      <Label layoutX="64.0" layoutY="411.0" text="Información de la Comunidad">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextArea fx:id="txtInformacion" editable="false" layoutX="34.0" layoutY="473.0" prefHeight="93.0" prefWidth="290.0" />
      <Button fx:id="btnVerInformacion" layoutX="100.0" layoutY="436.0" mnemonicParsing="false" onAction="#verInformacionComunidad" prefHeight="30.0" prefWidth="150.0" text="Ver Información" />

      <!-- Botón volver -->
      <Button fx:id="btnVolver" layoutX="120.0" layoutY="577.0" mnemonicParsing="false" onAction="#volver" prefHeight="30.0" prefWidth="110.0" text="Volver" />
   </children>
</AnchorPane>
