            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="40.0" layoutY="123.0" text="Nombre:" />
      <TextField fx:id="txtNombreComunidad" layoutX="120.0" layoutY="120.0" prefHeight="25.0" prefWidth="240.0" />
      <Label layoutX="40.0" layoutY="158.0" text="Descripción:" />
