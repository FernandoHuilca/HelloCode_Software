      <Button fx:id="btnVerInformacion" layoutX="40.0" layoutY="505.0" mnemonicParsing="false" onAction="#verInformacionComunidad" prefHeight="30.0" prefWidth="150.0" text="Ver Información" />

      <!-- Botón volver -->
      <Button fx:id="btnVolver" layoutX="650.0" layoutY="505.0" mnemonicParsing="false" onAction="#volver" prefHeight="30.0" prefWidth="110.0" text="Volver" />
   </children>
