      <Button fx:id="btnCrearComunidad" layoutX="120.0" layoutY="248.0" mnemonicParsing="false" onAction="#crearComunidad" prefHeight="30.0" prefWidth="150.0" text="Crear Comunidad" />

      <!-- Sección para asignar moderador -->
      <Label layoutX="440.0" layoutY="88.0" text="Asignar Moderador">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
