<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Comunidad_Modulo.Controladores_GUI.GestionComunidad_Controller">
   <children>
      <Text layoutX="268.0" layoutY="54.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Gestión de Comunidad">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Text>

      <!-- Sección para crear comunidad -->
      <Label layoutX="40.0" layoutY="88.0" text="Crear Nueva Comunidad">
