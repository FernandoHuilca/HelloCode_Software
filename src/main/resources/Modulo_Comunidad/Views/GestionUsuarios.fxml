<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Comunidad_Modulo.Controladores_GUI.GestionUsuarios_Controller">

   <children>
      <Text layoutX="250.0" layoutY="50.0" text="Gestión de Usuarios">
         <font>
            <Font name="System Bold" size="24.0"/>
         </font>
      </Text>

      <!-- Crear usuario -->
      <Label layoutX="40.0" layoutY="80.0" text="Crear Nuevo Usuario">
         <font><Font name="System Bold" size="16.0"/></font>
      </Label>
      <Label layoutX="40.0" layoutY="120.0" text="Nombre:"/>
      <TextField fx:id="txtNombreUsuario" layoutX="120.0" layoutY="115.0" prefWidth="240.0"/>
      <Label layoutX="40.0" layoutY="160.0" text="Nivel Java:"/>
      <ComboBox fx:id="comboNivelJava" layoutX="120.0" layoutY="155.0" prefWidth="240.0"/>
      <Button fx:id="btnCrearUsuario" layoutX="120.0" layoutY="195.0" prefWidth="150.0" text="Crear Usuario"
              onAction="#crearUsuario"/>

      <!-- Listar usuarios -->
      <Label layoutX="40.0" layoutY="260.0" text="Usuarios Registrados">
         <font><Font name="System Bold" size="16.0"/></font>
      </Label>
      <TextArea fx:id="txtListaUsuarios" layoutX="40.0" layoutY="290.0" prefHeight="150.0" prefWidth="320.0" editable="false"/>
      <Button fx:id="btnListarUsuarios" layoutX="40.0" layoutY="450.0" prefWidth="150.0" text="Listar Usuarios"
              onAction="#listarUsuarios"/>

      <!-- Conectar y desconectar usuarios -->
      <Label layoutX="400.0" layoutY="80.0" text="Conexión de Usuarios">
         <font><Font name="System Bold" size="16.0"/></font>
      </Label>
      <Label layoutX="400.0" layoutY="120.0" text="Índice del usuario:"/>
      <TextField fx:id="txtIndiceUsuario" layoutX="520.0" layoutY="115.0" prefWidth="80.0"/>
      <Button fx:id="btnConectarUsuario" layoutX="400.0" layoutY="155.0" prefWidth="150.0" text="Conectar Usuario"
              onAction="#conectarUsuario"/>
      <Button fx:id="btnDesconectarUsuario" layoutX="560.0" layoutY="155.0" prefWidth="150.0" text="Desconectar Usuario"
              onAction="#desconectarUsuario"/>

      <!-- Área de mensajes / feedback -->
      <TextArea fx:id="txtInformacion" layoutX="400.0" layoutY="220.0" prefHeight="220.0" prefWidth="350.0" editable="false"/>

      <!-- Botón volver -->
      <Button fx:id="btnVolver" layoutX="640.0" layoutY="500.0" prefWidth="110.0" text="Volver"
              onAction="#volver"/>
   </children>
</AnchorPane>
