<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Comunidad_Modulo.Controladores_GUI.GestionForo_Controller">

   <children>
      <Text layoutX="89.0" layoutY="50.0" text="Gestión de Foro">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Text>

      <!-- Crear grupo -->
      <Label layoutX="36.0" layoutY="76.0" text="1. Crear Grupo">
         <font><Font name="System Bold" size="16.0" /></font>
      </Label>
      <Label layoutX="36.0" layoutY="101.0" text="Título:" />
      <TextField fx:id="txtTituloGrupo" layoutX="80.0" layoutY="97.0" prefHeight="25.0" prefWidth="225.0" />
      <Label layoutX="36.0" layoutY="129.0" text="Nivel Java:" />
      <ComboBox fx:id="comboNivelJava" layoutX="97.0" layoutY="125.0" prefHeight="25.0" prefWidth="161.0" />
      <Label layoutX="37.0" layoutY="159.0" text="Tema:" />
      <ComboBox fx:id="comboTema" layoutX="86.0" layoutY="155.0" prefWidth="200.0" />
      <Button fx:id="btnCrearGrupoDiscusion" layoutX="23.0" layoutY="189.0" onAction="#crearGrupoDiscusion" prefWidth="150.0" text="Crear Grupo Discusión" />
      <Button fx:id="btnCrearGrupoCompartir" layoutX="186.0" layoutY="189.0" onAction="#crearGrupoCompartir" prefWidth="150.0" text="Crear Grupo Compartir" />

      <!-- Listar y unirse a grupos -->
      <Label layoutX="33.0" layoutY="226.0" text="2. Listar y Unirse a Grupos">
         <font><Font name="System Bold" size="16.0" /></font>
      </Label>
      <Button fx:id="btnListarGruposDiscusion" layoutX="20.0" layoutY="254.0" onAction="#listarGruposDiscusion" prefWidth="150.0" text="Listar Discusión" />
      <Button fx:id="btnListarGruposCompartir" layoutX="180.0" layoutY="254.0" onAction="#listarGruposCompartir" prefWidth="150.0" text="Listar Compartir" />
      <Label layoutX="22.0" layoutY="290.0" text="Tipo de grupo:" />
      <ComboBox fx:id="comboTipoGrupo" layoutX="108.0" layoutY="286.0" prefHeight="25.0" prefWidth="110.0" />
      <Button fx:id="btnUnirseGrupo" layoutX="223.0" layoutY="286.0" onAction="#unirseAGrupo" prefHeight="25.0" prefWidth="100.0" text="Unirse a Grupo" />

      <!-- Gestión de hilos de discusión -->
      <Label layoutX="26.0" layoutY="320.0" text="3. Gestión de Hilos (Grupos Discusión)">
         <font><Font name="System Bold" size="16.0" /></font>
      </Label>
      <Label layoutX="17.0" layoutY="349.0" text="Tipo de acción:" />
      <ComboBox fx:id="comboAccionHilo" layoutX="104.0" layoutY="345.0" prefHeight="25.0" prefWidth="120.0" />
      <Button fx:id="btnGestionarHilos" layoutX="229.0" layoutY="345.0" onAction="#gestionarHilos" prefHeight="25.0" prefWidth="100.0" text="Gestionar Hilos" />

      <!-- Gestión de soluciones -->
      <Label layoutX="14.0" layoutY="383.0" text="4. Gestión de Soluciones (Grupos Compartir)">
         <font><Font name="System Bold" size="16.0" /></font>
      </Label>
      <Label layoutX="10.0" layoutY="412.0" text="Tipo de acción:" />
      <ComboBox fx:id="comboAccionSolucion" layoutX="102.0" layoutY="408.0" prefHeight="25.0" prefWidth="100.0" />
      <Button fx:id="btnGestionarSoluciones" layoutX="212.0" layoutY="408.0" onAction="#gestionarSoluciones" prefHeight="25.0" prefWidth="130.0" text="Gestionar Soluciones" />

      <!-- Área información -->
      <TextArea fx:id="txtInformacion" editable="false" layoutX="17.0" layoutY="489.0" prefHeight="94.0" prefWidth="326.0" />

      <!-- Botón volver -->
      <Button fx:id="btnVolver" layoutX="120.0" layoutY="593.0" onAction="#volver" prefWidth="110.0" text="Volver" />

      <!-- Estado del sistema -->
      <Label layoutX="111.0" layoutY="445.0" text="Estado del Sistema">
         <font><Font name="System Bold" size="14.0" /></font>
      </Label>
      <Label fx:id="lblEstadoSistema" layoutX="18.0" layoutY="465.0" prefHeight="17.0" prefWidth="161.0" text="Inicializando..." />
   </children>
</AnchorPane>
