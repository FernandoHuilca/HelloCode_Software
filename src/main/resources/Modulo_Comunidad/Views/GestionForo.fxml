<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Comunidad_Modulo.Controladores_GUI.GestionForo_Controller">

   <children>
      <Text layoutX="350.0" layoutY="40.0" text="Gestión de Foro">
         <font>
            <Font name="System Bold" size="26.0"/>
         </font>
      </Text>

      <!-- Crear grupo -->
      <Label layoutX="30.0" layoutY="70.0" text="1. Crear Grupo">
         <font><Font name="System Bold" size="16.0"/></font>
      </Label>
      <Label layoutX="30.0" layoutY="110.0" text="Título:"/>
      <TextField fx:id="txtTituloGrupo" layoutX="90.0" layoutY="105.0" prefWidth="250.0"/>
      <Label layoutX="30.0" layoutY="150.0" text="Nivel Java:"/>
      <ComboBox fx:id="comboNivelJava" layoutX="110.0" layoutY="145.0" prefWidth="150.0"/>
      <Label layoutX="30.0" layoutY="190.0" text="Tema:"/>
      <ComboBox fx:id="comboTema" layoutX="90.0" layoutY="185.0" prefWidth="200.0"/>
      <Button fx:id="btnCrearGrupoDiscusion" layoutX="30.0" layoutY="230.0" prefWidth="150.0" text="Crear Grupo Discusión"
              onAction="#crearGrupoDiscusion"/>
      <Button fx:id="btnCrearGrupoCompartir" layoutX="190.0" layoutY="230.0" prefWidth="150.0" text="Crear Grupo Compartir"
              onAction="#crearGrupoCompartir"/>

      <!-- Listar y unirse a grupos -->
      <Label layoutX="30.0" layoutY="280.0" text="2. Listar y Unirse a Grupos">
         <font><Font name="System Bold" size="16.0"/></font>
      </Label>
      <Button fx:id="btnListarGruposDiscusion" layoutX="30.0" layoutY="310.0" prefWidth="150.0" text="Listar Discusión"
              onAction="#listarGruposDiscusion"/>
      <Button fx:id="btnListarGruposCompartir" layoutX="190.0" layoutY="310.0" prefWidth="150.0" text="Listar Compartir"
              onAction="#listarGruposCompartir"/>
      <Label layoutX="30.0" layoutY="350.0" text="Tipo de grupo:"/>
      <ComboBox fx:id="comboTipoGrupo" layoutX="130.0" layoutY="345.0" prefWidth="140.0"/>
      <Button fx:id="btnUnirseGrupo" layoutX="280.0" layoutY="345.0" prefWidth="120.0" text="Unirse a Grupo"
              onAction="#unirseAGrupo"/>

      <!-- Gestión de hilos de discusión -->
      <Label layoutX="30.0" layoutY="390.0" text="3. Gestión de Hilos (Grupos Discusión)">
         <font><Font name="System Bold" size="16.0"/></font>
      </Label>
      <Label layoutX="30.0" layoutY="420.0" text="Tipo de acción:"/>
      <ComboBox fx:id="comboAccionHilo" layoutX="130.0" layoutY="415.0" prefWidth="140.0"/>
      <Button fx:id="btnGestionarHilos" layoutX="280.0" layoutY="415.0" prefWidth="120.0" text="Gestionar Hilos"
              onAction="#gestionarHilos"/>

      <!-- Gestión de soluciones -->
      <Label layoutX="30.0" layoutY="460.0" text="4. Gestión de Soluciones (Grupos Compartir)">
         <font><Font name="System Bold" size="16.0"/></font>
      </Label>
      <Label layoutX="30.0" layoutY="490.0" text="Tipo de acción:"/>
      <ComboBox fx:id="comboAccionSolucion" layoutX="130.0" layoutY="485.0" prefWidth="140.0"/>
      <Button fx:id="btnGestionarSoluciones" layoutX="280.0" layoutY="485.0" prefWidth="120.0" text="Gestionar Soluciones"
              onAction="#gestionarSoluciones"/>

      <!-- Área información -->
      <TextArea fx:id="txtInformacion" layoutX="420.0" layoutY="80.0" prefWidth="550.0" prefHeight="450.0" editable="false"/>

      <!-- Botón volver -->
      <Button fx:id="btnVolver" layoutX="850.0" layoutY="550.0" prefWidth="110.0" text="Volver"
              onAction="#volver"/>

      <!-- Estado del sistema -->
      <Label layoutX="30.0" layoutY="540.0" text="Estado del Sistema">
         <font><Font name="System Bold" size="14.0"/></font>
      </Label>
      <Label fx:id="lblEstadoSistema" layoutX="30.0" layoutY="570.0" text="Inicializando..." prefWidth="380.0"/>
   </children>
</AnchorPane>
