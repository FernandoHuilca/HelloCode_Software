<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Comunidad_Modulo.Controladores_GUI.GestionChat_Controller">
    <children>
        <Label layoutX="62.0" layoutY="26.0" text="Gestión de Chats Privados">
            <font>
                <Font size="22.0" />
            </font>
        </Label>

        <Label layoutX="41.0" layoutY="65.0" text="Participantes (índices separados por coma):" />
        <TextField fx:id="txtParticipantes" layoutX="47.0" layoutY="88.0" prefWidth="250" />

        <Label layoutX="41.0" layoutY="120.0" text="Contenido del mensaje:" />
        <TextField fx:id="txtMensaje" layoutX="47.0" layoutY="145.0" prefWidth="250" />

        <Label layoutX="56.0" layoutY="183.0" text="Índice del chat o usuario:" />
        <TextField fx:id="txtIndice" layoutX="196.0" layoutY="179.0" prefWidth="100" />

        <Button layoutX="25.0" layoutY="214.0" onAction="#crearChatPrivado" prefHeight="25.0" prefWidth="156.0" text="Crear Chat Privado" />
        <Button layoutX="194.0" layoutY="214.0" onAction="#enviarMensaje" prefWidth="150" text="Enviar Mensaje" />
        <Button layoutX="27.0" layoutY="248.0" onAction="#verHistorialChat" prefHeight="25.0" prefWidth="156.0" text="Ver Historial Chat" />
        <Button layoutX="196.0" layoutY="248.0" onAction="#listarChats" prefHeight="25.0" prefWidth="150.0" text="Listar Chats" />

        <!-- Área principal de información -->
        <Label layoutX="37.0" layoutY="280.0" style="-fx-font-weight: bold;" text="Información del Sistema:" />
        <TextArea fx:id="txtInformacion" layoutX="32.0" layoutY="307.0" prefHeight="126.0" prefWidth="296.0" wrapText="true" />

        <!-- Área de notificaciones del moderador -->
        <Label layoutX="41.0" layoutY="443.0" style="-fx-font-weight: bold; -fx-text-fill: #8b4513;" text="Notificaciones de Moderación:" />
        <Button fx:id="btnLimpiarNotificaciones" layoutX="229.0" layoutY="441.0" onAction="#limpiarNotificacionesModerador" prefWidth="80" style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-font-size: 10px;" text="Limpiar" />
        <TextArea fx:id="txtNotificacionesModerador" layoutX="32.0" layoutY="472.0" prefHeight="101.0" prefWidth="296.0" style="-fx-background-color: #fff8dc; -fx-border-color: #ffa500; -fx-font-family: monospace; -fx-font-size: 11px;" text="=== NOTIFICACIONES DE MODERACIÓN ===&#10;&#10;Aquí aparecerán los mensajes de sanciones, bloqueos y eventos de moderación..." wrapText="true" />
      <Button fx:id="btnVolver" layoutX="155.0" layoutY="589.0" mnemonicParsing="false" onAction="#volver" text="Volver" />
    </children>
</AnchorPane>
