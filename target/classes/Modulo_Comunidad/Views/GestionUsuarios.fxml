<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Comunidad_Modulo.Controladores_GUI.GestionUsuarios_Controller">

   <children>
      <Text layoutX="88.0" layoutY="50.0" text="Gestión de Usuarios">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Text>

      <!-- Crear usuario -->
      <Label layoutX="41.0" layoutY="68.0" text="Crear Nuevo Usuario">
         <font><Font name="System Bold" size="16.0" /></font>
      </Label>
      <Label layoutX="49.0" layoutY="110.0" text="Nombre:" />
      <TextField fx:id="txtNombreUsuario" layoutX="132.0" layoutY="106.0" prefHeight="25.0" prefWidth="177.0" />
      <Label layoutX="45.0" layoutY="142.0" text="Nivel Java:" />
      <ComboBox fx:id="comboNivelJava" layoutX="132.0" layoutY="138.0" prefHeight="25.0" prefWidth="177.0" />
      <Button fx:id="btnCrearUsuario" layoutX="100.0" layoutY="175.0" onAction="#crearUsuario" prefWidth="150.0" text="Crear Usuario" />

      <!-- Listar usuarios -->
      <Label layoutX="42.0" layoutY="438.0" text="Usuarios Registrados">
         <font><Font name="System Bold" size="16.0" /></font>
      </Label>
      <TextArea fx:id="txtListaUsuarios" editable="false" layoutX="40.0" layoutY="474.0" prefHeight="95.0" prefWidth="281.0" />
      <Button fx:id="btnListarUsuarios" layoutX="213.0" layoutY="438.0" onAction="#listarUsuarios" prefHeight="25.0" prefWidth="110.0" text="Listar Usuarios" />

      <!-- Conectar y desconectar usuarios -->
      <Label layoutX="26.0" layoutY="211.0" text="Conexión de Usuarios">
         <font><Font name="System Bold" size="16.0" /></font>
      </Label>
      <Label layoutX="24.0" layoutY="240.0" text="Índice del usuario:" />
      <TextField fx:id="txtIndiceUsuario" layoutX="133.0" layoutY="236.0" prefWidth="80.0" />
      <Button fx:id="btnConectarUsuario" layoutX="21.0" layoutY="270.0" onAction="#conectarUsuario" prefWidth="150.0" text="Conectar Usuario" />
      <Button fx:id="btnDesconectarUsuario" layoutX="178.0" layoutY="270.0" onAction="#desconectarUsuario" prefWidth="150.0" text="Desconectar Usuario" />

      <!-- Área de mensajes / feedback -->
      <TextArea fx:id="txtInformacion" editable="false" layoutX="34.0" layoutY="305.0" prefHeight="124.0" prefWidth="281.0" />

      <!-- Botón volver -->
      <Button fx:id="btnVolver" layoutX="110.0" layoutY="583.0" onAction="#volver" prefWidth="110.0" text="Volver" />
   </children>
</AnchorPane>
