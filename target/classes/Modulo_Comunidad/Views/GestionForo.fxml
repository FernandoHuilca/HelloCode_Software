<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="360.0" style="-fx-background-color: #DCD6F7;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Comunidad_Modulo.Controladores_GUI.GestionForo_Controller">
   <children>
      <StackPane prefHeight="720.0" prefWidth="360.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

         <!-- Capa 1: Contenido principal -->
         <VBox fx:id="vboxPrincipal" alignment="TOP_CENTER" spacing="8.0" StackPane.alignment="TOP_CENTER">
            <!-- Encabezado -->
            <HBox alignment="CENTER" prefHeight="70.0" prefWidth="360.0" style="-fx-background-color: #424874; -fx-background-radius: 0 0 15 15;">
               <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="🗨 Foro de Comunidad">
                  <font>
                     <Font size="18.0" />
                  </font>
                  <HBox.margin>
                     <Insets bottom="8.0" top="8.0" />
                  </HBox.margin>
               </Label>
            </HBox>

            <!-- Estado del sistema -->
            <Label fx:id="lblEstadoSistema" alignment="CENTER" prefHeight="28.0" prefWidth="320.0" style="-fx-background-color: #D6E5E3; -fx-background-radius: 10;" text="🔄 Estado del Sistema: Cargando..." textFill="#424874">
               <font>
                  <Font size="10.0" />
               </font>
               <padding>
                  <Insets bottom="4.0" left="8.0" right="8.0" top="4.0" />
               </padding>
            </Label>

            <!-- Pestañas de navegación -->
            <TabPane fx:id="tabPane" prefWidth="320.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
               <tabs>
                  <Tab style="-fx-font-weight: bold;" text="💬 Discusión">
                     <content>
                        <VBox spacing="8.0" style="-fx-background-color: transparent;">
                           <!-- Unirse a Grupo -->
                           <Label style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="👥 Unirse a Grupo">
                              <font>
                                 <Font size="13.0" />
                              </font>
                              <padding>
                                 <Insets left="10.0" />
                              </padding>
                           </Label>
                           <HBox alignment="CENTER" spacing="0.0">
                              <Button fx:id="btnUnirseGrupoDiscusion" mnemonicParsing="false" onAction="#unirseAGrupoDiscusion" prefHeight="36.0" prefWidth="320.0" style="-fx-background-color: #424874; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Unirse a Grupo" />
                           </HBox>

                           <Separator prefWidth="320.0" />

                           <!-- Contenido de Grupos de Discusión -->
                           <Label style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="📋 Grupos de Discusión">
                              <font>
                                 <Font size="13.0" />
                              </font>
                              <padding>
                                 <Insets left="10.0" />
                              </padding>
                           </Label>
                           <HBox alignment="CENTER" spacing="8.0">
                              <Button fx:id="btnCrearGrupoDiscusion" mnemonicParsing="false" onAction="#mostrarFormularioDiscusion" prefHeight="36.0" prefWidth="150.0" style="-fx-background-color: #424874; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="➕ Crear" />
                              <Button fx:id="btnListarGruposDiscusion" mnemonicParsing="false" onAction="#listarGruposDiscusion" prefHeight="36.0" prefWidth="150.0" style="-fx-background-color: #6B7A99; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="📋 Ver" />
                           </HBox>

                           <Separator prefWidth="320.0" />

                           <!-- Gestión de Hilos -->
                           <Label style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="📌 Gestión de Hilos">
                              <font>
                                 <Font size="13.0" />
                              </font>
                              <padding>
                                 <Insets left="10.0" />
                              </padding>
                           </Label>
                           <HBox alignment="CENTER" spacing="8.0">
                              <ComboBox fx:id="comboAccionHilo" prefWidth="200.0" promptText="Acción" style="-fx-background-radius: 10;" />
                              <Button fx:id="btnGestionarHilos" mnemonicParsing="false" onAction="#gestionarHilos" prefHeight="36.0" prefWidth="90.0" style="-fx-background-color: #424874; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="➡ Ir" />
                           </HBox>

                           <Separator prefWidth="320.0" />

                           <!-- Gestión de Respuestas -->
                           <Label style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="💬 Gestión de Respuestas">
                              <font>
                                 <Font size="13.0" />
                              </font>
                              <padding>
                                 <Insets left="10.0" />
                              </padding>
                           </Label>
                           <HBox alignment="CENTER" spacing="8.0">
                              <ComboBox fx:id="comboAccionRespuesta" prefWidth="200.0" promptText="Acción" style="-fx-background-radius: 10;" />
                              <Button fx:id="btnGestionarRespuestas" mnemonicParsing="false" onAction="#gestionarRespuestas" prefHeight="36.0" prefWidth="90.0" style="-fx-background-color: #424874; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="➡ Ir" />
                           </HBox>

                           <!-- Área de información -->
                           <TextArea fx:id="txtInformacionDiscusion" editable="false" prefHeight="280.0" prefWidth="320.0" promptText="ℹ️ Información de grupos..." style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #A6B1E1;" wrapText="true" VBox.vgrow="ALWAYS">
                              <font>
                                 <Font size="11.0" />
                              </font>
                              <padding>
                                 <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                              </padding>
                           </TextArea>
                        </VBox>
                     </content>
                  </Tab>

                  <Tab style="-fx-font-weight: bold;" text="🔄 Compartir">
                     <content>
                        <VBox spacing="8.0" style="-fx-background-color: transparent;">
                           <Label style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="👥 Unirse a Grupo">
                              <font>
                                 <Font size="13.0" />
                              </font>
                              <padding>
                                 <Insets left="10.0" />
                              </padding>
                           </Label>
                           <HBox alignment="CENTER" spacing="0.0">
                              <Button fx:id="btnUnirseGrupoCompartir" mnemonicParsing="false" onAction="#unirseAGrupoCompartir" prefHeight="36.0" prefWidth="320.0" style="-fx-background-color: #424874; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Unirse a Grupo" />
                           </HBox>

                           <Separator prefWidth="320.0" />

                           <Label style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="🔄 Grupos de Compartir">
                              <font>
                                 <Font size="13.0" />
                              </font>
                              <padding>
                                 <Insets left="10.0" />
                              </padding>
                           </Label>
                           <HBox alignment="CENTER" spacing="8.0">
                              <Button fx:id="btnCrearGrupoCompartir" mnemonicParsing="false" onAction="#mostrarFormularioCompartir" prefHeight="36.0" prefWidth="150.0" style="-fx-background-color: #424874; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="➕ Crear" />
                              <Button fx:id="btnListarGruposCompartir" mnemonicParsing="false" onAction="#listarGruposCompartir" prefHeight="36.0" prefWidth="150.0" style="-fx-background-color: #6B7A99; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="📋 Ver" />
                           </HBox>

                           <Separator prefWidth="320.0" />

                           <Label style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="💡 Gestión de Soluciones">
                              <font>
                                 <Font size="13.0" />
                              </font>
                              <padding>
                                 <Insets left="10.0" />
                              </padding>
                           </Label>
                           <HBox alignment="CENTER" spacing="8.0">
                              <ComboBox fx:id="comboAccionSolucion" prefWidth="200.0" promptText="Acción" style="-fx-background-radius: 10;" />
                              <Button fx:id="btnGestionarSoluciones" mnemonicParsing="false" onAction="#gestionarSoluciones" prefHeight="36.0" prefWidth="90.0" style="-fx-background-color: #424874; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="➡ Ir" />
                           </HBox>

                           <Separator prefWidth="320.0" />

                           <Label style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="💭 Gestión de Comentarios">
                              <font>
                                 <Font size="13.0" />
                              </font>
                              <padding>
                                 <Insets left="10.0" />
                              </padding>
                           </Label>
                           <HBox alignment="CENTER" spacing="8.0">
                              <ComboBox fx:id="comboAccionComentario" prefWidth="200.0" promptText="Acción" style="-fx-background-radius: 10;" />
                              <Button fx:id="btnGestionarComentarios" mnemonicParsing="false" onAction="#gestionarComentarios" prefHeight="36.0" prefWidth="90.0" style="-fx-background-color: #424874; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="➡ Ir" />
                           </HBox>

                           <TextArea fx:id="txtInformacionCompartir" editable="false" prefHeight="280.0" prefWidth="320.0" promptText="ℹ️ Información de grupos..." style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #A6B1E1;" wrapText="true" VBox.vgrow="ALWAYS">
                              <font>
                                 <Font size="11.0" />
                              </font>
                              <padding>
                                 <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                              </padding>
                           </TextArea>
                        </VBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>

            <!-- Botón Volver -->
            <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#volver" prefHeight="36.0" prefWidth="320.0" style="-fx-background-color: #6B7A99; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="⬅ Volver" />
         </VBox>

         <!-- Capa 2: Formulario superpuesto -->
         <VBox fx:id="formCrearGrupo" alignment="CENTER" style="-fx-background-color: rgba(214,229,227,0.9); -fx-background-radius: 15; -fx-padding: 15;" visible="false">
            <Label fx:id="lblTituloFormulario" style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="📝 Crear Nuevo Grupo">
               <font>
                  <Font size="15.0" />
               </font>
               <padding>
                  <Insets bottom="8.0" top="5.0" />
               </padding>
            </Label>

            <TextField fx:id="txtTituloGrupo" prefHeight="32.0" prefWidth="300.0" promptText="Título del grupo" style="-fx-background-radius: 10;" />

            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <Label style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="☕ Nivel Java:" />
               <ComboBox fx:id="comboNivelJava" prefWidth="110.0" promptText="Seleccione" style="-fx-background-radius: 10;" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <Label style="-fx-font-weight: bold; -fx-text-fill: #424874;" text="📚 Tema:" />
               <ComboBox fx:id="comboTema" prefWidth="110.0" promptText="Seleccione" style="-fx-background-radius: 10;" />
            </HBox>

            <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 8 0 0 0;">
               <Button fx:id="btnConfirmarCrearGrupo" mnemonicParsing="false" onAction="#confirmarCrearGrupo" prefHeight="32.0" prefWidth="110.0" style="-fx-background-color: #424874; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="✅ Confirmar" />
               <Button fx:id="btnCancelarCrearGrupo" mnemonicParsing="false" onAction="#ocultarFormulario" prefHeight="32.0" prefWidth="110.0" style="-fx-background-color: #6B7A99; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="❌ Cancelar" />
            </HBox>
         </VBox>

      </StackPane>
   </children>
</AnchorPane>
