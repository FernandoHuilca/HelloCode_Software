<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="640.0" prefWidth="360.0"
            style="-fx-background-color: radial-gradient(center 50% 50%, radius 80%, #DCD6F7 0%, #424874 50%, #424874 100%);
                   -fx-font-family: 'Arial';
                   -fx-font-size: 12px;
                   -fx-padding: 8 16 8 16;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Comunidad_Modulo.Controladores_GUI.GestionUsuarios_Controller">

    <!-- Head -->
    <HBox layoutX="15" layoutY="10.0" alignment="CENTER" spacing="10">
        <ImageView fitHeight="40.0" fitWidth="40.0">
            <Image url="@images/comunidad.png"/>
        </ImageView>
        <Text text="Conéctate" style="-fx-fill: white;">
            <font>
                <Font name="System Bold" size="50.0"/>
            </font>
        </Text>
    </HBox>

    <!-- Panel - Información Comunidades -->
    <VBox layoutX="35" layoutY="85" spacing="10" prefWidth="280">
        <!-- Lista comunidad -->
        <HBox spacing="10">
            <TextArea fx:id="txtComunidades"
                      editable="false"
                      prefHeight="160.0" prefWidth="300.0"
                      wrapText="true"
                      style="-fx-background-color: #f3e5f5;
                         -fx-text-fill: #424874;
                         -fx-font-size: 13px;
                         -fx-font-family: 'Segoe UI', 'Arial';
                         -fx-background-radius: 15;
                         -fx-border-radius: 15;
                         -fx-border-width: 1.5;
                         -fx-border-color: #DCD6F7;
                         -fx-padding: 8;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0.3, 0, 2);" />
        </HBox>
    </VBox>


    <VBox layoutX="35" layoutY="260" spacing="15" prefWidth="280">
        <!-- Botón para ver Comunidades -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="btnListarUsuarios"
                    onAction="#listarUsuarios"
                    text="Comunidades"
                    prefHeight="35.0" prefWidth="160.0"
                    style="-fx-background-color: linear-gradient(to bottom, #424874, #424874);
                   -fx-text-fill: white;
                   -fx-font-size: 14px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 20;
                   -fx-border-radius: 20;
                   -fx-border-color: #DCD6F7;
                   -fx-border-width: 1.5;
                   -fx-cursor: hand;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);">
            </Button>
        </HBox>
        <!-- TextArea para información -->
        <HBox alignment="CENTER">
            <TextArea fx:id="txtInformacion"
                      editable="false"
                      prefHeight="140.0" prefWidth="300.0"
                      wrapText="true"
                      style="-fx-background-color: #f3e5f5;
                         -fx-text-fill: #424874;
                         -fx-font-size: 13px;
                         -fx-font-family: 'Segoe UI', 'Arial';
                         -fx-background-radius: 15;
                         -fx-border-radius: 15;
                         -fx-border-width: 1.5;
                         -fx-border-color: #424874;
                         -fx-padding: 8;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0.3, 0, 2);" />
        </HBox>
        <!-- Cabecera para el seleccionador -->
        <HBox alignment="CENTER">
            <Label text="Elige tu Comunidad!!!"
                   style="-fx-text-fill: white;
                      -fx-font-size: 15px;
                      -fx-font-weight: bold;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 2, 0.5, 0, 1);">
                <font>
                    <Font name="System Bold" size="40.0"/>
                </font>
            </Label>
        </HBox>

        <!-- Buscador -->
        <HBox alignment="CENTER">
            <TextField fx:id="txtIndiceUsuario"
                       prefWidth="200.0"
                       promptText="Buscar por índice..."
                       style="-fx-background-color: #f3e5f5;
                          -fx-text-fill: #424874;
                          -fx-font-size: 13px;
                          -fx-border-color: #424874;
                          -fx-border-radius: 10;
                          -fx-background-radius: 10;
                          -fx-padding: 4 8 4 8;" />
        </HBox>

        <!-- Botones para el ingreso y salida de una comunidad -->
        <HBox spacing="10">
            <Button fx:id="btnConectarUsuario"
                    onAction="#conectarUsuario"
                    text="Unirse"
                    prefHeight="35.0" prefWidth="150.0"
                    style="-fx-background-color: linear-gradient(to bottom, #424874, #424874);
                   -fx-text-fill: white;
                   -fx-font-size: 14px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 20;
                   -fx-border-radius: 20;
                   -fx-border-color: #424874;
                   -fx-border-width: 1.5;
                   -fx-cursor: hand;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);" />

            <Button fx:id="btnDesconectarUsuario"
                    onAction="#desconectarUsuario"
                    text="Abandonar"
                    prefHeight="35.0" prefWidth="150.0"
                    style="-fx-background-color: linear-gradient(to bottom, #424874, #424874);
                   -fx-text-fill: white;
                   -fx-font-size: 14px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 20;
                   -fx-border-radius: 20;
                   -fx-border-color: #424874;
                   -fx-border-width: 1.5;
                   -fx-cursor: hand;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);"/>
        </HBox>

        <!-- Botón volver -->
        <HBox alignment="CENTER">
            <Button fx:id="btnVolver"
                    onAction="#volver"
                    text="Volver"
                    prefWidth="110.0"
                    style="-fx-background-color: linear-gradient(to bottom, #424874, #424874);
                   -fx-text-fill: white;
                   -fx-font-size: 14px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 20;
                   -fx-border-radius: 22;
                   -fx-border-color: #424874;
                   -fx-border-width: 1.5;
                   -fx-cursor: hand;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);" />
        </HBox>
    </VBox>

</AnchorPane>