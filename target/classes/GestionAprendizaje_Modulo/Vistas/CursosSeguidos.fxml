<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" style="-fx-background-color: #424874;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionAprendizaje_Modulo.Controladores.CursosSeguidosController">
    <children>
        <!-- Título -->
        <Label layoutX="80.0" layoutY="50.0"
               style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif;"
               text="Cursos Seguidos" />

        <!-- Contenedor de cursos -->
        <VBox fx:id="contenedorCursos" layoutX="40.0" layoutY="120.0" prefWidth="280.0" spacing="15.0" alignment="CENTER">
            <!-- Curso: Java -->
            <Label text="JAVA" prefWidth="250" alignment="CENTER"
                   style="-fx-background-color: #6C63FF; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 15px; -fx-padding: 10;"/>

            <!-- Curso: Python -->
            <Label text="PYTHON" prefWidth="250" alignment="CENTER"
                   style="-fx-background-color: #3B97D3; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 15px; -fx-padding: 10;"/>

            <!-- Curso: PHP -->
            <Label text="PHP" prefWidth="250" alignment="CENTER"
                   style="-fx-background-color: #FF4081; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 15px; -fx-padding: 10;"/>

            <!-- Curso: C++ -->
            <Label text="C++" prefWidth="250" alignment="CENTER"
                   style="-fx-background-color: #FF7043; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 15px; -fx-padding: 10;"/>
        </VBox>

        <!-- Botón Volver -->
        <Label fx:id="btnVolver" layoutY="7.0" layoutX="10.0"
               style="-fx-text-fill: white; -fx-font-size: 20px; -fx-cursor: hand;"
               text="⬅️" />
    </children>
</AnchorPane>
