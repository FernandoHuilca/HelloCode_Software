<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionAprendizaje_Modulo.Controladores.RutaController">

    <!-- Título -->
    <Label layoutX="123.0" layoutY="45.0" style="-fx-font-size: 24px; -fx-font-family: 'Arial Black'; -fx-text-fill: #2c3e50;" text="PYTHON" />

    <!-- Botones circulares -->
    <Button fx:id="btnLvl1" layoutX="140.0" layoutY="99.0" onAction="#clickBtnLvl1" prefHeight="80" prefWidth="80" style="-fx-background-color: linear-gradient(to bottom, #2ecc71, #27ae60); -fx-background-radius: 40px; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;" text="LEVEL 1" />

    <Button fx:id="btnLvl2" layoutX="140.0" layoutY="205.0" onAction="#clickBtnLvl2" prefHeight="80" prefWidth="80" style="-fx-background-color: linear-gradient(to bottom, #3498db, #2980b9); -fx-background-radius: 40px; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;" text="LEVEL 2" />

    <Button fx:id="btnLvl3" layoutX="140.0" layoutY="303.0" onAction="#clickBtnLvl3" prefHeight="80" prefWidth="80" style="-fx-background-color: linear-gradient(to bottom, #95a5a6, #7f8c8d); -fx-background-radius: 40px; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;" text="LEVEL 3" />

    <Button fx:id="btnLvl4" layoutX="140.0" layoutY="413.0" onAction="#clickBtnLvl4" prefHeight="80" prefWidth="80" style="-fx-background-color: linear-gradient(to bottom, #95a5a6, #7f8c8d); -fx-background-radius: 40px; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;" text="LEVEL 4" />

    <Button fx:id="btnLesson" layoutX="140.0" layoutY="522.0" onAction="#clickBtnLesson" prefHeight="80" prefWidth="80" style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-background-radius: 40px; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;" text="LESSON" />

    <!-- Botón de retroceso -->
    <Button fx:id="btnBack" layoutX="14.0" layoutY="46.0" onAction="#clickBtnBack" prefHeight="36.0" prefWidth="65.0" style="-fx-background-radius: 12px;" text="BACK" textFill="#563232">
        <font>
            <Font name="Comic Sans MS" size="11.0" />
        </font>
    </Button>

</AnchorPane>
