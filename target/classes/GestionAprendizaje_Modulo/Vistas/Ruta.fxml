<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>

<AnchorPane fx:id="rootPane" prefHeight="640.0" prefWidth="360.0" style="-fx-background-color: #424874;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionAprendizaje_Modulo.Controladores.RutaController">

    <!-- Top Bar -->
    <HBox alignment="CENTER" prefHeight="40.0" prefWidth="360.0" style="-fx-background-color: linear-gradient(to right, #DCD6F7, #A6B1E1);                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 6, 0.3, 0, 3);" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="12" left="25" right="25" top="12" />
        </padding>
        <Button fx:id="btnAtras" onAction="#manejarAtras" style="-fx-background-color: transparent;                        -fx-text-fill: #424874;                        -fx-font-size: 18px;                        -fx-font-weight: bold;                        -fx-cursor: hand;" text="⬅" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="tituloLenguajeLabel" style="-fx-text-fill: #424874;                       -fx-font-size: 22px;                       -fx-font-weight: bold;                       -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Java" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Botón Recursos -->
    <Button fx:id="btnRecursos" layoutX="304.0" prefHeight="40" prefWidth="46.0" style="-fx-background-color: #A6B1E1;                    -fx-text-fill: white;                    -fx-font-size: 14px;                    -fx-font-weight: bold;                    -fx-background-radius: 20;                    -fx-padding: 8;                    -fx-cursor: hand;" text="💡" AnchorPane.leftAnchor="304.0" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="75" />

    <!-- Contenido principal -->
    <Pane fx:id="nodoContainer" style="-fx-padding: 25;" AnchorPane.bottomAnchor="60" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="125">
        <!-- Los nodos y líneas se agregarán dinámicamente desde el controlador -->
    </Pane>

    <!-- Subtema -->
    <Label layoutX="14.0" layoutY="71.0" style="-fx-text-fill: #DCD6F7;                   -fx-font-size: 18px;                   -fx-font-weight: bold;                   -fx-padding: 10;" text="Bucles" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="71.0" />

    <!-- Barra inferior con íconos -->
    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Button fx:id="btnHome" style="-fx-background-color: transparent;                        -fx-text-fill: white;" text="🏠" />
        <Button fx:id="btnAdd" style="-fx-background-color: transparent;                        -fx-text-fill: white;" text="➕" />
        <Button fx:id="btnLibrary" style="-fx-background-color: transparent;                        -fx-text-fill: white;" text="📚" />
    </HBox>

</AnchorPane>
