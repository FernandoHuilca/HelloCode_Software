<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="640.0" prefWidth="360.0" style="-fx-background-color: #424874;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionAprendizaje_Modulo.Controladores.RutaController">

    <!-- Barra Superior (Top Bar) -->
    <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10" style="-fx-background-color: #A6B1E1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 6, 0.3, 0, 3);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets left="15.0" right="15.0" />
        </padding>
        <Button fx:id="btnAtras" onAction="#manejarAtras" style="-fx-background-color: transparent; -fx-text-fill: #424874; -fx-font-size: 22px; -fx-font-weight: bold; -fx-cursor: hand;" text="←" />
        <Label fx:id="tituloLenguajeLabel" style="-fx-text-fill: #424874; -fx-font-size: 22px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI', Arial, sans-serif;" text="Lenguaje" />
        <Region HBox.hgrow="ALWAYS" />
        <!-- El botón de recursos general se ha eliminado. Ahora se generará uno por cada tema. -->
    </HBox>

    <!-- Contenedor Principal para el Contenido Dinámico -->
    <!-- Este ScrollPane permite que el contenido sea más largo que la pantalla. -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="70.0">
        <content>
            <!--
            ======================================================================
                ¡PUNTO CLAVE DE LA INYECCIÓN!
                El RutaController buscará este VBox con fx:id="contenidoVBox"
                y llenará su contenido dinámicamente con los contenedores de temas,
                los noditos y los botones de recursos.
            ======================================================================
            -->
            <VBox fx:id="contenidoVBox" spacing="15.0" style="-fx-padding: 10;" />
        </content>
    </ScrollPane>

    <!-- Barra de Navegación Inferior -->
    <HBox alignment="CENTER" prefHeight="60.0" spacing="50.0" style="-fx-background-color: #A6B1E1;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Button fx:id="btnHome" style="-fx-background-color: transparent; -fx-text-fill: #424874; -fx-font-size: 24px;" text="🏠" />
        <Button fx:id="btnAdd" style="-fx-background-color: transparent; -fx-text-fill: #424874; -fx-font-size: 24px;" text="➕" />
        <Button fx:id="btnLibrary" style="-fx-background-color: transparent; -fx-text-fill: #424874; -fx-font-size: 24px;" text="📚" />
    </HBox>

</AnchorPane>