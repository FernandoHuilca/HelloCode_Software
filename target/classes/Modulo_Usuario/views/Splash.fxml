<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Modulo_Usuario.Controladores.SplashController">
    <StackPane fx:id="rootPane" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
        <!-- Fondo colorido que ocupa todo (color sólido para compatibilidad) -->
        <Region maxHeight="Infinity" maxWidth="Infinity" style="-fx-background-color: #424874;" StackPane.alignment="CENTER" />

        <!-- Contenido centrado -->
        <VBox alignment="CENTER" spacing="10" StackPane.alignment="CENTER">
            <padding>
                <Insets bottom="60" left="40" right="40" top="60" />
            </padding>

            <!-- Logo principal con texto HC -->
            <StackPane fx:id="logoContainer" prefHeight="180" prefWidth="180" style="-fx-background-color: linear-gradient(135deg, #A6B1E1, #DCD6F7, #CACFD6); -fx-background-radius: 120; -fx-effect: dropshadow(gaussian, #A6B1E1, 30, 0.3, 0, 0); -fx-border-color: #fff; -fx-border-width: 4; -fx-border-radius: 120;">
                <Label style="-fx-font-size: 72px; -fx-font-weight: bold; -fx-text-fill: #424874; -fx-font-family: 'Arial Black';" text="HC" />
            </StackPane>

            <!-- Título -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 30 0 0 0;">
                <Label style="-fx-text-fill: #DCD6F7; -fx-font-size: 28px; -fx-font-weight: bold;" text="Hello Code Software" />
                
                <Label style="-fx-text-fill: #A6B1E1; -fx-font-size: 15px; -fx-font-style: italic;" text="Versión 3.0" />
            </VBox>

            <!-- Barra de progreso simple -->
            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30 0 0 0;">
                <ProgressBar fx:id="progressBar" prefHeight="10" prefWidth="220" style="-fx-accent: linear-gradient(to right, #A6B1E1, #DCD6F7, #CACFD6); -fx-background-radius: 5;" />
                
                <Label fx:id="statusLabel" style="-fx-text-fill: #D6E5E3; -fx-font-size: 13px; -fx-font-weight: bold;" text="Inicializando..." />
            </VBox>

            <!-- Footer simple -->
            <VBox alignment="CENTER" style="-fx-padding: 30 0 0 0;">
                <Label style="-fx-text-fill: #D6E5E3; -fx-font-size: 11px;" text="© 2024 Hello Code Software" />
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>
